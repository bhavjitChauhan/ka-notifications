{
  "name": "ka-notifications-2.0",
  "version": "2.0.0",
  "description": "The updated version of the original Khan Academy notifications extension with more maintainable code.",
  "main": "index.js",
  "scripts": {
    "build": "webpack && node scripts/firefox-build.js",
    "build.chrome": "webpack",
    "commit": "sh -c 'git add . && git commit -m \"$0\" && git push -u origin main'",
    "clearcache": "git rm -r --cached .",
    "fix": "eslint 'src/**/*.ts' --fix",
    "lint": "eslint .",
    "release": "webpack && node scripts/firefox-build.js && node scripts/zip-extension.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eliasmurcray/ka-notifications.git"
  },
  "keywords": [
    "chrome-extension",
    "firefox-addon"
  ],
  "author": "Elias Murcray",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eliasmurcray/ka-notifications/issues"
  },
  "homepage": "https://github.com/eliasmurcray/ka-notifications#readme",
  "devDependencies": {
    "@types/chrome": "^0.0.239",
    "@types/html-webpack-plugin": "^3.2.6",
    "archiver": "^5.3.1",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "fs-extra": "^11.1.1",
    "html-webpack-plugin": "^5.5.3",
    "mini-css-extract-plugin": "^2.7.6",
    "ts-loader": "^9.4.4",
    "webpack": "^5.88.1",
    "webpack-cli": "^5.1.4"
  }
}
